        <% if (bookFound == true) { %>
            <section class="productDetail">
            <article class="productDetailImg">
                <img src="<%= book.image %>" alt="<%= book.title %>">
            </article>
            <article class="productDetailBody">
                <div class="breadcrumbs">
                    <span><%= book.genre %></span><span>/</span><span><%= book.subgenre %></span>
                </div>
                <h2 class="productDetailTitle"><%= book.title %></h2>
                <h3 class="productDetailAuthor"><%= book.author %></h3>
                <div class="productDetailQuantity">
                    <h4 class="productDetailPrice"><span>AR$</span><span><%= book.price %></span></h4>
                    <div class="selectQuantity">
                        <div class="selectQuantityWarning">
                            <span><% if (book.stock == 1) { %>
                            Queda
                            <% } else { %>
                            Quedan
                            <% } %>
                            </span><span><%= book.stock %></span><span><% if (book.stock == 1) { %>
                            disponible
                            <% } else { %>
                            disponibles
                            <% } %></span>
                        </div>
                        <div class="selectQuantitybtns">
                            <div class="selectQuantitybtn"><i class="fa-solid fa-minus"></i></div><span class="selectQuantityNumber">1</span><div class="selectQuantitybtn"><i class="fa-solid fa-plus"></i></div>
                        </div>
                    </div>
                </div>
                <a class="productDetailAddCart" href="../shoppingCart">Agregar al carrito</a>
            </article>
            </section>
            <section class="productDetailDesc">
            <div class="sinopsis">
                <h4>Sinópsis</h4>
                <div><%= book.desc %></div>
            </div>
            <div class="desc">
                <h4>Especificaciones</h4>
                <div>
                    <ul>
                        <li><span>Peso:</span><span><%= book.especs.weight%> g</span></li>
                        <li><span>Idioma:</span><span><%= book.especs.language%></span></li>
                        <li><span>Editorial:</span><span class="editorial"><%= book.especs.editorial.toUpperCase()%></span></li>
                        <li><span>Fecha de publicación:</span><span><%= book.especs.date%></span></li>
                        <li><span>Dimensiones:</span><span><%= book.especs.width%>cm X <%= book.especs.height%>cm X <%= book.especs.depth%>cm</span></li>
                        <li><span>Número de páginas:</span><span><%= book.especs.pages%></span></li>
                    </ul>
                </div>
            </div>
